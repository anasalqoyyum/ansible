# This should already the default from ghostty
# JetBrains Mono Nerd Font is used by default
font-family = GoogleSansCode Nerd Font
font-size = 15
font-thicken = true
# Disabled ligatures
font-feature = -liga, -calt, -dlig

# Force window to be maximized
window-height = 10000
window-width = 10000
window-padding-x = 10
window-padding-y = 10

macos-titlebar-style = hidden
macos-option-as-alt = true

# Needed to set cursor-style: block
shell-integration = zsh
shell-integration-features = no-cursor

cursor-style = block
theme = "tokyonight_night"
# background-opacity = 0.99
# background-blur = true

# copy to clipboard on select
copy-on-select = clipboard
confirm-close-surface = false

# cmd+` to toggle quick terminal
keybind = global:cmd+backquote=toggle_quick_terminal

# match Windows Terminal mapping so apps in tmux can detect Shift+Enter
keybind = shift+enter=text:\x1b\r
